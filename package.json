{
  "name": "fusionbridge",
  "version": "1.0.0",
  "description": "Cross-chain token bridge between Ethereum and Stellar using Fusion+ architecture with HTLC mechanism",
  "type": "module",
  "private": true,
  "workspaces": [
    "contracts",
    "stellar", 
    "relayer",
    "frontend"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "contracts:compile": "pnpm --filter contracts compile",
    "contracts:deploy": "pnpm --filter contracts deploy",
    "stellar:build": "pnpm --filter stellar build",
    "relayer:start": "pnpm --filter relayer start",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:build": "pnpm --filter frontend build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fusionbridge.git"
  },
  "keywords": [
    "cross-chain",
    "ethereum",
    "stellar",
    "bridge",
    "defi",
    "htlc",
    "fusion",
    "1inch",
    "ethglobal"
  ],
  "author": "FusionBridge Team",
  "license": "MIT"
} 